# Rails 8 JSON-RPC Demo - Client App Dockerfile
# Development-oriented build for local gem dependencies

FROM ruby:3.4.1-slim

# Install dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    curl \
    git \
    libyaml-dev \
    libvips \
    pkg-config \
    sqlite3 \
    libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Set environment
ENV RAILS_ENV=development \
    BUNDLE_PATH=/bundle \
    BUNDLE_WITHOUT="" \
    PATH="/bundle/bin:$PATH"

# Create directories
RUN mkdir -p storage log tmp/pids tmp/cache tmp/sockets

# Entrypoint script
COPY docker/entrypoint-client.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose port
EXPOSE 3001

ENTRYPOINT ["/entrypoint.sh"]
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0", "-p", "3001"]
